<% if users.any? %>

<div class="row">
  <% users.each do |user| %>
  <div class="card">
    <div class="card-top mt-3 ml-3">
      <%= user.name %>
    </div>
    <div class="card-body">
      <% if user.profile_image? %>
        <%= image_tag user.profile_image.to_s, size: "200x200" %>
      <% else %>
        <%= image_tag "default_img.jpg", size: "200x200" %>
      <% end %>
    </div>
    <div class="card-text mb-3 ml-3">
      <%= link_to "profile", user_path(user) %>
    </div>
  </div>
<% end %>
</div>
  <%= paginate users %>
<% end %>