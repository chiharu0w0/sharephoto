<% if logged_in? %>
<div class="row">

  <% @posts.each do |post| %>
  <div class="card">
    <div class="card-top mt-3 ml-3">
      <%= post.user.name %>
    </div>
    <div class="card-body">
      <%= image_tag post.image.to_s, size: "200x200" %>
    </div>
    <div class="card-text mb-3 ml-3">
      <%= link_to 'more...', post_path(post) %>
    </div>
  </div>


<% end %>
  
</div>

<div class="btn-group fixed-bottom" role="group">

  <%= link_to 'POST', new_post_path, class: 'btn btn-primary' %>
  <%= link_to 'LIKE', likes_user_path(@current_user), class: 'btn btn-primary' %>

</div>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to SharePhoto</h1>
      <%= link_to 'sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>